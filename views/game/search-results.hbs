<div style="background: linear-gradient(176deg, rgba(215,205,104,1) 0%, rgba(247,73,73,1) 100%);">
<div class="d-flex flex-column justify-content-center align-items-center" style="margin-bottom: 20px">
<br>
<form class="d-flex pe-5" method="get" action="/game/results">
    <input type="text" class="form-control me-2" name="searchItem" placeholder="Search the web for more games" style="width: 50vw;">
    <button type="submit" class="btn btn-dark">Search</button>
</form>
</div>
<div class="d-flex justify-content-center flex-wrap">
    {{#each games}}
  <div class="card" style="width: 25%; max-height: 40%; margin-bottom: 20px; margin-left: 20px;">
    <img src="{{background_image}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">Platform: {{platforms.0.platform.name}}</p>
      <p class="card-text">ESRB rating: {{esrb_rating.name}}</p>
      <p class="card-text">Release Date: {{released}}</p>
      <p class="card-text">Metacritic rating: {{metacritic }}</p>
    </div>
  </div>
    {{/each}}
</div>
</div>
</div>
