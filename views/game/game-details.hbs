<h1>Game details</h1>
<div>
  <h3>  {{ game.name }} </h3>
  <img src="{{game.image}}">
  <p><strong>Genre:</strong> {{game.genre}} </p>
  <p><strong>Description:</strong> {{game.description}} </p>
  <p><strong>Rating:</strong> {{game.rating}} </p>
</div>

<div>
    <h4><u>Comments:</u></h4>
    {{#each game.comments}}
      <p><strong>{{this.user.displayName}}:</strong> {{this.comment}}</p>
    {{/each}}
</div>

<div>
    <form action="/game/{{game._id}}" method="POST">
      <label for="comment-input">Add a comment:</label>
      <input type="text" name="comment">
      <button type="submit">Submit</button>
    </form>
</div>

<br>
<div>
<form action="/game/{{game._id}}/favourites" method="POST">
  <button type="submit">Add to favourites</button>
</form>
</div> 
<br>

{{#if currentUser.isAdmin}}

<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
  Admin Controls
</button>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasExampleLabel">Admin Portal</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div>
     Please make sure you are following our guidelines when deleting content!
    </div>
    <div class="dropdown mt-3">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        Options
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/game/{{game._id}}/edit">Edit Game</a></li>
      </ul>
      <form action="/game/{{game._id}}/delete" method="post">
      <br>
      <br>
      <button class="btn btn-secondary" type="submit">
        Delete
      </button>
      </form>
    </div>
  </div>
</div>
{{/if}}