<h1>Game details</h1>
<div>
  <h3>  {{ game.name }} </h3>
  <img src="{{game.image}}">
  <p><strong>Genre:</strong> {{game.genre}} </p>
  <p><strong>Description:</strong> {{game.description}} </p>
  <p><strong>Rating:</strong> {{game.rating}} </p>
</div>

<div>
    <h4><u>Comments:</u></h4>
    {{#each game.comments}}
      <p><strong>{{this.user.displayName}}:</strong> {{this.comment}}</p>
    {{/each}}
</div>

<div>
    <form action="/game/{{game._id}}" method="POST">
      <label for="comment-input">Add a comment:</label>
      <input type="text" name="comment">
      <button type="submit">Submit</button>
    </form>
</div>

{{#if currentUser.isAdmin}}
<div>
  <h4>Admin Controls:</h4>
  <a href="/game/{{game._id}}/edit"> Edit </a>
  <form action="/game/{{game._id}}/delete" method="post">
      <button type="submit">Delete</button>
    </form>
</div> 
{{/if}}